<section id="content" class="container fos">
  <div class="row">

    <article class="span6 column" id="info-index">
      {% include "SFMPicmntBundle:Index:info.html.twig" %}
    </article>

    <article class="span6 column">
      <form class="well form-horizontal" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
	<fieldset>
	  <legend>{{ 'Remember the password' | trans }}</legend>
	  <div class="control-group">
            {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
            {% endif %}
            <label class="control-label" for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
	    <div class="controls">
              <input type="text" class="input-xlarge" id="username" name="username" />
	    </div>
	  </div>
	  <div class="clearfix" style="text-align:center">
	    <input type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" class="btn primary"/>
	  </div>
	</fieldset>
      </form>
    </article>

  </div>


</section>
