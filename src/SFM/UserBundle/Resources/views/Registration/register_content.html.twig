<section id="register"  class="container container_12">

    <div class="clear">
    </div>

    <article class="grid_4 prefix_4">

	<h2 class="form-title">{{ 'Join' | trans }}</h2>
	<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
	    <fieldset>
		{{ form_widget(form) }}
		<input type="checkbox" value="0" required="required"/>  <a href="{{ path('static_page', {'page': 'terms'}) }}">{{ 'I agree with the terms and condition of use' | trans }}</a>
		<div>
		    <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="button accept-button"/>
		</div>
	    </fieldset>
	</form>
    </article>
</section>
