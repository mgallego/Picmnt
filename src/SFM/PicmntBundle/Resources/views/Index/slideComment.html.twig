<div id="slider2" class="box-with-shadow"> 
  <ul id="slider2Content" >
    {% for imageComment in mostComments %}
    <li class="slider2Image">
      <a href="{{ path('img_view', {'user': imageComment.comment.image.user.username, 'slug': imageComment.comment.image.slug}) }} ">
	<img src="/uploads{{ asset(imageComment.comment.image.url)}}" class="box-with-shadow" />
      </a>
      <span class="bottom"><strong>{{ imageComment.comment.image.title }}</strong><br />{{ 'By' | trans }}: {{ imageComment.comment.image.user.username }}</span>
    </li>
    {% else %}
    There are not images in the database
    {% endfor %}

    <div class="clear slider2Image"></div>
  </ul>
</div>
