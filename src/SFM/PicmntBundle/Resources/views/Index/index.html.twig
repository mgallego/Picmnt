{% extends "SFMPicmntBundle::layout.html.twig" %}

{% block stylesheet %}
{{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/sfmpicmnt/stylesheets/slide.css')}}"> 
{% endblock stylesheet %}

{% block javascript %}
{{ parent() }}

<script type="text/javascript" src="http://s3slider-original.googlecode.com/svn/trunk/s3Slider.js"></script>

{% endblock javascript %}



{% block scripts %}
{{ parent() }}

<script type="text/javascript">
    $(document).ready(function() {
        $('#slider').s3Slider({
            timeOut: 3000
        });
    });
</script>
{% endblock scripts %}

{% block content %}

<section id="content" class="container">
  <div class="row">
    <div id="index-slide" >

      {% include 'SFMPicmntBundle:Index:slide.html.twig' %}

    </div>
    
    <div class="span8 column box-with-shadow" id="index-options">

      
      <a href="{{ path('img_show', {'option': 'random'}) }}"><h2>{{ 'Try' | trans }}</h2></a>

    </div>
    <div class="span8 column box-with-shadow" id="explain-video">
      <iframe width="420" height="315" src="http://www.youtube.com/embed/UpMh9H7-odw?rel=0" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
</section>
{% endblock %}
