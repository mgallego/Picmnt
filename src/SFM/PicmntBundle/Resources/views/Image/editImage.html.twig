{% extends "SFMPicmntBundle::layout_private.html.twig" %}

{% form_theme form 'SFMPicmntBundle::form.html.twig' %}

{% block content %}

<section id="content" style="padding-top: 50px">
  <div class="container-fluid">

    <div style="background:#FFF">


      {% block interno %}
      <section id="pestanas">

	<div id="row">
	  {{ knp_menu_render('tabs', {'currentClass': 'active'}) }}
	</div>

      </section>

      {% endblock %}
      

      <center>

	<h1>{{ image.title }}</h1>

	<div class="row">
	  
	  <div class="span14 columns" id="imageImage">

	    <img src="{{ asset(image_url) }}"/> 

	  </div>

	  <div class="span6 columns">
	    
	    <form action="{{ path('img_edit', { 'id_image': image.idImage }) }}" method="post" {{ form_enctype(form) }} class="form-stacked">

	      <fieldset style="text-align:left">
		<legend>{{ 'Edit' | trans }}</legend>

		<div>
		  {{ form_errors(form.title) }}
		  {{ form_label(form.title, 'Title' | trans) }}
		  {{ form_widget(form.title) }}
		</div>

		<div>
		  {{ form_errors(form.description) }}
		  {{ form_label(form.description, 'Description' | trans) }}
		  {{ form_widget(form.description) }}
		</div>
		
		<div>
		  {{ form_errors(form.category) }}
		  {{ form_label(form.category, 'Category' | trans) }}
		  {{ form_widget(form.category) }}

{#
		  {{ form_errors(form.notify) }}
		  {{ form_label(form.notify, 'Category' | trans) }}
		  {{ form_widget(form.notify) }}
#}
		{{ form_rest(form) }}


		<div class="actions"> 
		   <input type="submit" class="btn primary" value="{{ 'Save Changes' | trans }}">&nbsp;<button type="reset" class="btn">{{ 'Cancel' | trans }}</button> 
		</div> 
	      </fieldset>
	    </form>
	    <br/>
	    <div id="remove-image">
	      <a href="{{ path('img_delete', { 'idImage': image.idImage }) }}" class="btn danger">{{ 'Remove Image' | trans }}</a>
	    </div>

	  </div>

	</div>
      </center>

    </div>
  </div>
</section>

{% endblock %}
