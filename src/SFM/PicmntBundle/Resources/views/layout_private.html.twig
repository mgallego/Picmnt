{% extends "SFMPicmntBundle::base.html.twig" %}

{% block header %}
<section id="topbar">
  <!-- Topbar
       ================================================== -->
  <div class="topbar" data-dropdown="dropdown">

    <div class="topbar-inner">

      <div class="container">
        <h3><a href="{{ path('home') }}">Picmnt</a></h3>

	<ul class="nav">
    	  
	  {{ knp_menu_render('SFMPicmntBundle:Builder:menuCategories', {'class': 'nav'}) }} 
	  
	</ul>
	
	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") or is_granted("IS_AUTHENTICATED_FULLY") %}
	<ul class="nav secondary-nav">
	  {% if  totalPendingComments(app.user.username) %}
	  <li>
	    <a href="{{ path('usr_pending', {'userName': app.user.username}) }}">{{ totalPendingComments(app.user.username) }} {{ 'Pending Comments' | trans }}</a>
	  </li>
	  {% endif %}

	  <li class="dropdown">
 	    <a href="#" class="dropdown-toggle">{{ app.user.getUsername() }}</a>
	    <ul class="dropdown-menu">
	      <li><a href="{{ path('fos_user_change_password') }}">{{ 'Change Password' | trans }}</a></li>
	      <li class="divider"></li>
	      <li><a href="{{ path('fos_user_security_logout') }}">{{ 'Logout' | trans }}</a></li>
	    </ul>
	  </li>
	</ul>
	{% else %}
	<ul class="nav secondary-nav">
	  <li><a href="{{ path('fos_user_registration_register') }}">{{ 'Join' | trans }}</a></li>
	  <li><a href="{{ path('fos_user_security_login') }}">{{ 'Login' | trans }}</a></li>
	</ul>
	{% endif %}
      </div>
    </div>
  </div>
</section>

{% endblock %}

