server{
  listen 80;
  server_name phpmyadmin.local.dev;
  
  root /usr/share/phpmyadmin;

  location / {
    index index.php;
  }

  location ~ \.php$ {
    fastcgi_pass  php_backend;
    fastcgi_index index.php;
    fastcgi_param SCRIPT_FILENAME /usr/share/phpmyadmin$fastcgi_script_name;
    include       fastcgi_params;
  }
}